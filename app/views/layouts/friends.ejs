<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Paranuara</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/styles/friends.css">
  </head>
  <body class="container">
    <header>
      <% include ../components/navbar %>
    </header>
    <main>
        <div class="jumbotron">
            <h1>Friends</h1>
            <p>Here are displayed mutual friends who have brown eyes and are still alive</p>
        </div>
        <div class="container-fluid result-container">
          <div class="row">
            <div class="jumbotron col-md-6 ">
                <h2>Example of Inhabitants:</h2>
                <div class="list-employees">
                  <table class="table table-hover table-bordered table-condensed">
                    <tr>
                      <th>Index</th>
                      <th>Name</th>
                    </tr>
                    <tbody>
                      <% people.forEach(function(p) { %>
                        <tr>
                          <td><%= p.index %></td>
                          <td><%= p.name %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
            </div>
            <div class="jumbotron col-md-6">
              <h2>List of the mutual friends:</h2>
              <form action="/friends/result" method="get">
                  First Person: <input type="text" name="first" /><br/><br/>
                  Second Person: <input type="text" name="second" /><br/><br/>
                  <input type="submit" />
              </form>
              <% if (result !== null) { %>
                <% if (typeof result !== 'string' ) { %>
              <div class="list-mutuals">
                <table class="table table-hover table-bordered table-condensed">
                  <tr>
                    <th>Index</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Eyes</th>
                    <th>Alive</th>
                  </tr>
                  <tbody>
                    <% result.forEach(function(p) { %>
                      <tr>
                        <td><%= p.index %></td>
                        <td><%= p.name %></td>
                        <td><%= p.age %></td>
                        <td><%= p.gender %></td>
                        <td><%= p.eyeColor %></td>
                        <td><%= !p.has_died %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <h4 class="error-message"><%= result %></h4>
            <% }} %>
            </div>
        </div>
    </main>
    <footer>
      <% include ../components/footer %>
    </footer>
  </body>
</html>
