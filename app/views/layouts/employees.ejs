<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Paranuara</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/styles/employees.css">
  </head>
  <body class="container">
    <header>
      <% include ../components/navbar %>
    </header>
    <main>
        <div class="jumbotron">
            <h1>Employees</h1>
            <p>Here are displayed employees from a given company</p>
        </div>
        <div class="container-fluid result-container">
          <div class="row">
            <div class="jumbotron col-md-6 ">
                <h2>List of the Companies:</h2>
                <div class="list-companies">
                  <table class="table table-hover table-bordered table-condensed">
                    <tr>
                      <th>Index</th>
                      <th>Name</th>
                    </tr>
                    <tbody>
                      <% companies.forEach(function(c) { %>
                        <tr>
                          <td><%= c.index %></td>
                          <td><%= c.company %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
            </div>
            <div class="jumbotron col-md-6">
              <h2>List of the employees:</h2>
              <form action="/employees/result" method="get">
                  Company: <input type="text" name="company" />
                  <input type="submit" />
              </form>
              <% if (result !== null) { %>
                <% if (typeof result !== 'string' ) { %>
              <div class="list-employees">
                <table class="table table-hover table-bordered table-condensed">
                  <tr>
                    <th>Index</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                  </tr>
                  <tbody>
                    <% result.forEach(function(e) { %>
                      <tr>
                        <td><%= e.index %></td>
                        <td><%= e.name %></td>
                        <td><%= e.age %></td>
                        <td><%= e.gender %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
                <% } else { %>
                  <h4 class="error-message"><%= result %></h4>
              <% }} %>
            </div>
          </div>
        </div>
    </main>
    <footer>
      <% include ../components/footer %>
    </footer>
  </body>
</html>
