<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Paranuara</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/styles/diet.css">
  </head>
  <body class="container">
    <header>
      <% include ../components/navbar %>
    </header>
    <main>
        <div class="jumbotron">
            <h1>Diet</h1>
            <p>Here are displayed fruits and vegetables they like</p>
        </div>
        <div class="container-fluid result-container">
          <div class="row">
            <div class="jumbotron col-md-6 ">
                <h2>List of the Inhabitants:</h2>
                <div class="list-employees">
                  <table class="table table-hover table-bordered table-condensed">
                    <tr>
                      <th>Index</th>
                      <th>Name</th>
                    </tr>
                    <tbody>
                      <% people.forEach(function(p) { %>
                        <tr>
                          <td><%= p.index %></td>
                          <td><%= p.name %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
            </div>
            <div class="jumbotron col-md-6">
              <h2>List of the fruit and vegetables:</h2>
              <form action="/diet/result" method="get">
                  Person: <input type="text" name="name" /><br/><br/>
                  <input type="submit" />
              </form>
              <% if (typeof error === 'undefined') { %>
                <% if (typeof person !== 'undefined') { %>
              <div class="list-mutuals">
                <table class="table table-hover table-bordered table-condensed">
                  <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Fruit</th>
                    <th>Vegetables</th>
                  </tr>
                  <tbody>
                      <tr>
                        <td><%= person.name %></td>
                        <td><%= person.age %></td>
                        <% if (diet.fruit != []) { %>
                        <td><%= diet.fruit.map( f => { return f.name }); %></td>
                        <% } %>
                        <% if (diet.vegetables != []) { %>
                        <td><%= diet.vegetables.map( v => { return v.name }); %></td>
                        <% } %>
                      </tr>
                  </tbody>
                </table>
                <% }} else { %>
                  <h4 class="error-message"><%= error %></h4>
                <% } %>
              </div>
            </div>
        </div>
    </main>
    <footer>
      <% include ../components/footer %>
    </footer>
  </body>
</html>
